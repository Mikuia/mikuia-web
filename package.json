	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/Mikuia/mikuia-web.git"
	},
	"scripts": {
		"build": "webpack --config webpack.prod.config.ts",
		"dev": "concurrently \"npm run server\" \"npm run client\"",
		"client": "webpack-dev-server --config webpack.dev.config.ts --mode development --progress",
		"server": "nodemon --watch \"src/**/*.ts\" --exec ts-node src/index.ts",
		"start": "npm run build && NODE_ENV='production' ts-node src/index.ts"
	},
	"dependencies": {
		"express": "^4.16.4"
	},
	"devDependencies": {
		"@babel/core": "^7.1.6",
		"@babel/preset-env": "^7.1.6",
		"@babel/preset-react": "^7.0.0",
