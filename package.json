		"@fortawesome/free-regular-svg-icons": "^5.5.0",
		"@fortawesome/free-solid-svg-icons": "^5.5.0",
		"@fortawesome/react-fontawesome": "^0.1.3",
		"@types/express": "^4.16.0",
		"@types/node": "^10.12.11",
		"babel-loader": "^8.0.4",
		"babel-plugin-jsx-control-statements": "^4.0.0",
		"bootstrap": "^4.1.3",
		"bundle-loader": "^0.5.6",
		"concurrently": "^4.1.0",
		"css-loader": "^1.0.1",
		"file-loader": "^2.0.0",
		"font-awesome": "^4.7.0",
		"node-sass": "^4.10.0",
		"nodemon": "^1.18.7",
		"react": "^16.6.3",
		"react-dom": "^16.6.3",
		"react-hot-loader": "^4.3.12",
		"react-router-dom": "^4.3.1",
		"reactstrap": "^6.5.0",
		"sass-loader": "^7.1.0",
		"style-loader": "^0.23.1",
		"ts-node": "^7.0.1",
		"typescript": "^3.2.1",
		"uglifyjs-webpack-plugin": "^2.0.1",
		"url-loader": "^1.1.2",
		"webpack": "^4.27.0",
		"webpack-cli": "^3.1.2",
		"webpack-dev-middleware": "^3.4.0",
		"webpack-dev-server": "^3.1.10",
		"webpack-hot-middleware": "^2.24.3",
		"webpack-merge": "^4.1.4"
	}
}
