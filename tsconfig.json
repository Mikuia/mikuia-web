{
	"compilerOptions": {
		"allowJs": true,
		"jsx": "react",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"strictNullChecks": true,
		"target": "es6",
		"typeRoots": [
			"./src/lib/typings",
			"./node_modules/@types"
		]
	},
	"compileOnSave": true,
	"exclude": [
		"./node_modules",
		"./web/public/js"
	]
}